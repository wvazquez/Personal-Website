<form class="contact-form validate-form">
    <div class="input-container validate-input" data-validate="Name is required">
        <span class="input-label">Your Name</span>
        <input class="input" id="input-name" type="text" name="name" placeholder="Enter your name">
        <span class="input-focus"></span>
    </div>

    <div class="input-container validate-input" data-validate = "Valid email is required">
        <span class="input-label">Email</span>
        <input class="input" id="input-email" type="text" name="email" placeholder="Enter your email addess">
        <span class="input-focus"></span>
    </div>

    <div class="input-container message validate-input" data-validate = "Message is required">
        <span class="input-label">Message</span>
        <textarea class="input" id="input-message" name="message" placeholder="Your message here..."></textarea>
        <span class="input-focus"></span>
    </div>

    <div class="contact-button-container">
        <button class="contact-button">
            <span>
                Submit
                <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
            </span>
        </button>
    </div>
</form>