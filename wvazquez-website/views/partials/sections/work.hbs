<section class="work" id="work">
    <h2>Work</h2>
    <div class="projects">
        
        <div class="project-container">
            <div class="project-thumbnails container">
                {{#each projects}}
                <div class="project-unit" style="background: url(/images/work/{{folder}}/background.jpg) center center no-repeat">
                    <div class="project-overlay" id="{{folder}}">
                        <h3 class="title">{{title}}</h3>
                        <div class="icon"></div>
                    </div>
                </div>
                {{/each}}
            
            </div>
        </div>
        
        <div class="project-container">
            <div class="container">
                <div class="project-overview">
                    <div class="project-header">
                        <img class="back-arrow" src="/images/icons/back-arrow.svg" />
                        <h3 id="overview-title"></h3>
                        <a id="overview-link" target='_blank' href="">Visit Website</a>
                    </div>
                    
                    <div class="project-content">
                        {{!-- <img>
                        <p></p> --}}
                    </div>
                    
                </div>
        </div>

        </div>

        
    </div>

</section>